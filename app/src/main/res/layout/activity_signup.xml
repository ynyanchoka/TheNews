<!--                    android:background="@color/colorDivider"-->
<!--                    />-->
<!--            </LinearLayout>-->

            <Button
                android:id="@+id/idLoginButton"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/idSignUpButton"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:fontFamily="@font/roboto"
                android:text="Already have an account? Log in"
                android:textAllCaps="false"
                android:textColor="@color/colorOcean"
                android:textSize="15sp"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/idLoginButton"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

            </LinearLayout>


            <com.google.android.material.progressindicator.LinearProgressIndicator
                android:id="@+id/firebaseProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                android:visibility="gone"/>




        </RelativeLayout>

    </androidx.cardview.widget.CardView>

    <View
        android:id="@+id/orangeVector"
        android:layout_width="415dp"
        android:layout_height="45dp"
        android:layout_below="@id/cardSignUp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="1dp"
        android:background="@drawable/vector"
        android:backgroundTint="@color/colorOcean"
        />

</RelativeLayout>