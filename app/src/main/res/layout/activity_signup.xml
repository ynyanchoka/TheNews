<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.SignupActivity"
    android:background="#EFEEFA">


    <TextView
        android:id="@+id/WelcomeSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:padding="5dp"
        android:text="Sign up here"
        android:textAlignment="center"
        android:textSize="25sp"
        app:fontFamily="@font/roboto"
        android:textStyle="bold"
        android:textColor="@color/colorDark"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardSignUp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/WelcomeSignUp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:elevation="3dp"
        app:cardCornerRadius="12dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="@color/colorTextIcons"
        app:cardElevation="8dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/baseline_badge_black_24dp"
                android:drawablePadding="6dp"
                android:hint="Name"
                android:inputType="textPersonName"
                app:fontFamily="@font/roboto"
                />


            <EditText
                android:id="@+id/userEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/name"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:hint="Email"
                android:inputType="textEmailAddress"
                app:fontFamily="@font/roboto"
                android:drawableLeft="@drawable/baseline_email_black_24dp"
                android:drawablePadding="6dp"
                />

            <!--edit text for user password-->
            <EditText
                android:id="@+id/userPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userEmail"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/baseline_lock_black_24dp"
                android:drawablePadding="6dp"
                android:hint="Password"
                android:inputType="textPassword"
                app:fontFamily="@font/roboto" />

            <EditText
                android:id="@+id/userConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userPassword"
                android:layout_marginStart="10dp"
                android:layout_marginTop="40dp"
                android:layout_marginEnd="10dp"
                android:drawableLeft="@drawable/baseline_lock_black_24dp"
                android:drawablePadding="6dp"
                android:hint="Confirm password"
                android:inputType="textPassword"
                app:fontFamily="@font/roboto" />

            <Button
                android:id="@+id/idSignUpButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/userConfirmPassword"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/btn"
                android:text="Sign up"
                android:textAllCaps="false"
                android:textColor="@color/colorTextIcons"
                android:textSize="19sp"
                android:textStyle="bold"
                app:backgroundTint="@color/colorDark"
                app:fontFamily="@font/roboto" />

