<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.monari.thenews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheNews">
        <activity
            android:name=".ui.SavedActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SearchActivity"
            android:exported="false" />
        <activity
            android:name=".ui.TechActivity"
            android:exported="false" />
        <activity
            android:name=".ui.SportsActivity"
            android:exported="false" />
        <activity
            android:name=".ui.Science"
            android:exported="false" />
        <activity
            android:name=".ui.HealthActivity"
            android:exported="false" />
        <activity
            android:name=".ui.EntertainmentActivity"
            android:exported="false" />
        <activity
            android:name=".ui.BusinessActivity"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>